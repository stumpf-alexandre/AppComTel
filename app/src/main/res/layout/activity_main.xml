<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.als.app.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light"
        app:srcCompat="@drawable/road_sign"
        android:scaleType="centerCrop"
        android:contentDescription="@string/imgDescricao" />

    <TextView
        android:id="@+id/txtOla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtOla"
        android:gravity="top"
        android:textColor="@android:color/background_dark"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textAlignment="center"
        android:textSize="60sp" />

    <TextView
        android:layout_alignBottom="@id/imageView"
        android:id="@+id/txtFone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtFone"
        android:textSize="32sp"
        android:paddingRight="16dp"
        android:linksClickable="true"
        android:textColor="@android:color/background_dark"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        />

</RelativeLayout>
